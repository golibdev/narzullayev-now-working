<style>
    .disabled {
        cursor: pointer;
        pointer-events: none;
    }
    .page-item {
        cursor: pointer;
    }
    .search__box {
	display: none;
    }
    @media (max-width: 992px){
	.search__box {
		display: block;
	}
    }	
</style>

{{> otherNavbar}}

<div class="container mt-4">
	
<div class="container mb-3">
 <div class="row search__box">
                <div class="col-12">
                        <form action="/blogs" method="GET">
                                <div class="card my-4 shadow">
                                        <h5 class="card-header bg-white">Search</h5>
                                        <div class="card-body">
                                                <div class="d-flex justify-content-between">
                                                        <input type="text" value="{{querySearch}}" name="search" class="form-control" placeholder="Searching...">
                                                        <span class="mx-3">
                                                                <input type="submit" class="btn btn-secondary" value="Search">
                                                        </span>
                                                </div>
                                        </div>
                                </div>
                        </form>
                </div>
        </div>
    {{#if blogs}}
    <div class="row">
        {{#each blogs}}
            <div class="col-lg-4 col-md-6 mb-4" data-aos="zoom-in" data-aos-duratio="1500">
                <div class="card shadow">		
                        <img class="img-fluid rounded-top" src="{{image}}" alt="{{title}}">
                    <div class="card-body">
                        <p class="mb-2 card-title">{{title}}</p>
                        <a href="/blogpost?post={{slugUrl}}" class="btn btn-primary mt-3">
                            Read more â†’
                        </a>
                    </div>							
                    <div class="card-footer pb-0 pt-0 bg-white">
                        <p class="mt-3">Published: {{formatDate createdAt}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
    <nav>
        <ul class="pagination justify-content-center">
            {{#paginate pagination type="previous"}}
                <li {{#if disabled}}class="page-item disabled"{{/if}}><a href="?page={{n}}&limit=9" class="page-link">Prev</a></li>
            {{/paginate}}
            {{#paginate pagination type="middle"}}
                <li {{#if active}}class="page-item active"{{/if}}>
                <a href="?page={{n}}&limit=9" class="page-link  ">{{n}}</a>
                </li>
            {{/paginate}}
            {{#paginate pagination type="next"}}
                <li {{#if disabled}}class="page-item disabled"{{/if}}>
                <a href="?page={{n}}&limit=9" class="page-link">Next</a>
                </li>
            {{/paginate}}
        </ul>
    </nav>
   {{else}}
      <div class="alert alert-danger text-center">Postlar mavjud emas</div>
   {{/if}}
</div>

{{> footer}}
