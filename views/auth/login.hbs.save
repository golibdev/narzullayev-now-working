<style>
	#id-page {

</style>

<div id="page-login" class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-10 offset-sm-1 col-12 ">
            <div class="card p-4 shadow">
                {{#if logErr}}
                    <div class="alert alert-danger">
                        {{logErr}}
                    </div>
                {{/if}}
                <form action="/auth/login" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="name@example.com" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Your password" name="password" required>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>   
        </div>
    </div>
</div>
