<style>
    .disabled {
        cursor: pointer;
        pointer-events: none;
    }
    .page-item {
        cursor: pointer;
    }
    .search__box {
	display: none;
    }	
    @media (max-width: 992px){
	.search__box {
	    display: block;
	}
    }
</style>

{{> otherNavbar}}

<div class="container mt-4">
    <div class="row search__box">
	<div class="col-12">
		<form action="/blogs" method="GET">
			<div class="card my-4">							
				<h5 class="card-header bg-white">Search</h5>
		                <div class="card-body">
					<div class="d-flex justify-content-between">
						<input type="text" value="{{querySearch}}"  name="search" class="form-control" placeholder="Searching...">
						<span class="mx-3">			
							<input type="submit" class="btn btn-secondary" value="Search">
		                                </span>
					</div>
				</div>
			</div>
		</form>
	</div>
    </div>
    {{#if blogs}}
    <div class="row">
        {{#each blogs}}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <img class="w-100 rounded-top" src="{{image}}" alt="{{title}}">
                    <div class="card-body">                     
			<h3 class=mb-3">{{title}}</h3>
			  <a href="/blogpost?post={{slugUrl}}" class="btn btn-primary mt-3">
                            Read more â†’
                        </a>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between bg-white">
                        <p class="mt-3">Added: {{formatDate createdAt}}</p>
                        <p class="mt-3">Author: <a href="/">G'. Narzullayev</a></p>
                    </div>

                </div>
            </div>
        {{/each}}
    </div>
   {{else}}
      <div class="alert alert-danger text-center">Postlar mavjud emas</div>
   {{/if}}
</div>

{{> footer}}
