{{> postNavbar}}


<style>
    .lead {
        font-size: 1.25rem;
        font-weight: 300;
    }

    .blog-text {
	font-size: 16px !important;
	font-weight: normal;
    }


    @media (max-width: 576.98px) {
	.container {
	    padding: 0 30px !important;
	}
	.blog-text {
	     font-size: 17px !important;
	}
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4 class="mt-4">{{title}}</h4>
            <p class="lead">
                Author: <a href="#">G`olib Narzullayev</a>
            </p>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
		<p><b>Published: </b>{{formatDate createdAt}}</p>
		<p>
		     <i class="fas fa-eye"></i>
		     <span>{{count}}</span>
		</p>

            </div>
            
            <img src="{{image}}" alt="{{title}}" class="img-fluid rounded w-100">
            <hr>
            <div class="blog-text">
                {{{content}}}
            </div>
            <hr>
        </div>
